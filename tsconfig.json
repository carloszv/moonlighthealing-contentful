{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "pages",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "incremental": true,

    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveWatchOutput": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "include": [
    "pages", "components"
  ],
  "exclude": [
    "node_modules", "contentful", "lib", "docs", "public", "styles", "types" 
  ]
}
